<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#282C30"
    >

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/fotodetalhe"
        android:layout_width="match_parent"
        android:layout_height="400dp"/>

    <TextView
        android:id="@+id/nomepizza"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pizza de Peperonni"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="24sp"
        android:textColor="#F7F7F7"/>

    <RatingBar
        android:id="@+id/ratingBar2"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="81dp"
        android:layout_height="13dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="7dp"
        android:backgroundTint="#AAA9A9"
        android:progressTint="#FDC650"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Escolha o tamanho"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="16sp"
        android:textColor="#F7F7F7"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/botaoP"
            android:layout_width="60dp"
            android:layout_height="46dp"
            android:text="P"
            android:textSize="16sp"
            android:backgroundTint="#F2F2F2"
            android:textColor="#282C30"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />
        <Button
            android:id="@+id/botaoM"
            android:layout_width="60dp"
            android:layout_height="46dp"
            android:backgroundTint="#7AC64F"
            android:text="M"
            android:textColor="#282C30"
            android:textSize="16sp"
            android:layout_centerInParent="true"
            />

        <Button
            android:id="@+id/botaoG"
            android:layout_width="60dp"
            android:layout_height="46dp"
            android:text="G"
            android:textSize="16sp"
            android:backgroundTint="#F2F2F2"
            android:textColor="#282C30"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/preco"
        android:layout_width="97dp"
        android:layout_height="28dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center"
        android:textColor="#F7F7F7"
        android:text="R$ 29,99"
        android:textSize="24dp"/>

    <Button
        android:id="@+id/botaocomprar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#7AC64F"
        android:text="Comprar"
        android:textSize="24sp"
        android:padding="20dp"
        android:layout_marginBottom="-5dip"

        />

</LinearLayout>
</ScrollView>